<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".webView.WebViewActivity">

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="#24A89C">

        <ImageView
            android:id="@+id/homeIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home_24"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/backIV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_ios_24"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/forwardIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/forward_24"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/refreshIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/refresh_24"
            android:layout_weight="1"
            />


    </LinearLayout>

</LinearLayout>